{
	"compilerOptions": {
		"target": "ES2023",
		"module": "commonjs",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"lib": [
			"ES2023"
		],
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			],
			"(src)/*": [
				"src/*"
			],
			"@root/*": [
				"*"
			]
		},
		"rootDirs": [
			"./src"
		]
	},
	"include": [
		"src"
	]
}
